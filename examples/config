	// This is a sample configuration file used by examples programs

	SECTION_ADD Sa Sb Sc

SECTION Sa

	// Resources for example program 1-simple

	LET ratio 0.5

	example-1 a TIME
	example-1 b 45.5
	example-1 c 50 60 70
	example-1 d TRUE FALSE
	example-1 e new_value
	example-1 f ($$ example_param)
	example-1 g (CITRPL #000000 #ffff8000 ($ ratio))
	example-1 h ($ ratio)

SECTION Sb

	// Resources for example program 2-widgets

	LET widget \
		label \
		button \
		gauge

	label  background_color #126DD0
	button background_color #A155CC
	gauge  background_color #111111

	FOR_EACH widget
		(% widget) border_width 5
		(% widget) border_color #050505
	FOR_END	

SECTION Sc

	// Resources for example program 3-threads

	SEED ($$ sim_id)

	example-3 coordinates (RAND 10 90) (RAND 10 90) (RAND 10 90)

